        // Module-Kategorien
        const moduleCategories = {
            'content': 'üìÑ Content',
            'contact': 'üë• Kontakt',
            'process': '‚öôÔ∏è Prozesse',
            'promo': 'üéØ Promotion',
            'blog': 'üì∞ Blog',
            'layout': 'üé® Layout',
            'api': 'üîó API & Daten',
            'header': 'üé™ Header & Navigation',
            'interactive': 'üéÆ Interaktiv',
            'custom': 'üîß Benutzerdefiniert'
        };

        // Suchfilter-Variablen
        let searchTerm = '';
        let selectedCategory = 'all';

        // Utility-Funktionen
        function showNotification(text, type = 'success') {
            const notification = document.getElementById('notification');
            const notificationText = document.getElementById('notificationText');
            
            notification.className = 'notification ${type}';
            notificationText.textContent = text;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        function saveToLocalStorage() {
            try {
                const data = {
                    modules: modules,
                    timestamp: Date.now()
                };
                localStorage.setItem('kerberos-modules-pro', JSON.stringify(data));
                updateBackupStatus('Lokal gespeichert');
            } catch (error) {
                console.error('Fehler beim lokalen Speichern:', error);
                showNotification('‚ùå Fehler beim Auto-Speichern', 'error');
            }
        }

        function loadFromLocalStorage() {
            try {
                const stored = localStorage.getItem('kerberos-modules-pro');
                if (stored) {
                    const data = JSON.parse(stored);
                    if (data.modules) {
                        modules = data.modules;
                        renderModuleList();
                        updateBackupStatus('Aus lokalem Speicher geladen');
                        showNotification('‚úÖ Module aus lokalem Speicher geladen', 'success');
                        return true;
                    }
                }
            } catch (error) {
                console.error('Fehler beim Laden aus lokalem Speicher:', error);
                showNotification('‚ùå Fehler beim Laden', 'error');
            }
            return false;
        }

        function updateBackupStatus(action) {
            const status = document.getElementById('backupStatus');
            const lastBackup = document.getElementById('lastBackup');
            const moduleCount = document.getElementById('moduleCount');
            
            status.textContent = action + ' - ' + Object.keys(modules).length + ' Module';
            lastBackup.textContent = new Date().toLocaleTimeString();
            moduleCount.textContent = Object.keys(modules).length;
        }

        // Tab-Verwaltung
        function switchTab(tabName) {
            // Alle Tabs deaktivieren
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-panel').forEach(panel => {
                panel.classList.remove('active');
            });

            // Aktiven Tab und Panel aktivieren
            document.querySelector('[data-tab="${tabName}"]').classList.add('active');
            document.getElementById(tabName + 'Tab').classList.add('active');

            // Spezielle Aktionen f√ºr bestimmte Tabs
            if (tabName === 'preview') {
                updatePreview();
            } else if (tabName === 'visual') {
                updateVisualEditor();
            }
        }

        // Module-Liste rendern
        function renderModuleList() {
            const moduleList = document.getElementById('moduleList');
            const moduleStats = document.getElementById('moduleStats');
            
            moduleList.innerHTML = '';
            
            // Nach √Ñnderungsdatum sortieren (neueste zuerst)
            const sortedModules = Object.values(modules).sort((a, b) => 
                new Date(b.modified) - new Date(a.modified)
            );
            
            // Filter anwenden
            const filteredModules = sortedModules.filter(module => {
                const matchesSearch = searchTerm === '' || 
                    module.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
                    module.description.toLowerCase().includes(searchTerm.toLowerCase()) ||
                    (module.tags && module.tags.some(tag => tag.toLowerCase().includes(searchTerm.toLowerCase())));
                
                const matchesCategory = selectedCategory === 'all' || module.category === selectedCategory;
                
                return matchesSearch && matchesCategory;
            });
            
            // Statistiken aktualisieren
            if (moduleStats) {
                const totalModules = Object.keys(modules).length;
                const filteredCount = filteredModules.length;
                moduleStats.textContent = '${filteredCount} von ${totalModules} Modulen';
            }
            
            // Module anzeigen
            filteredModules.forEach(module => {
                const li = document.createElement('li');
                li.className = 'module-item';
                li.onclick = () => loadModule(module.id);
                
                const modifiedDate = new Date(module.modified).toLocaleDateString();
                
                li.innerHTML = '
                    <div class="module-name">${module.name}</div>
                    <div class="module-description">${module.description}</div>
                    <div class="module-meta">üìù ${modifiedDate} ‚Ä¢ ${moduleCategories[module.category] || 'üîß Custom'}</div>
                    <button class="module-delete" onclick="event.stopPropagation(); deleteModule('${module.id}')" title="Modul l√∂schen">√ó</button>
                ';
                
                moduleList.appendChild(li);
            });
            
            // Keine Module gefunden
            if (filteredModules.length === 0) {
                const noModules = document.createElement('li');
                noModules.className = 'no-modules';
                noModules.innerHTML = searchTerm || selectedCategory !== 'all' 
                    ? 'üîç Keine Module gefunden<br><small>Versuchen Sie andere Suchbegriffe</small>'
                    : 'üìù Noch keine Module vorhanden<br><small>Erstellen Sie Ihr erstes Modul!</small>';
                moduleList.appendChild(noModules);
            }

            updateBackupStatus('Liste aktualisiert');
        }

        // Modul laden
        function loadModule(moduleId) {
            currentModule = modules[moduleId];
            if (!currentModule) return;

            document.getElementById('welcomeScreen').style.display = 'none';
            document.getElementById('moduleEditor').style.display = 'block';
            
            document.getElementById('moduleTitle').textContent = currentModule.name;
            document.getElementById('moduleName').value = currentModule.name;
            document.getElementById('moduleDescription').value = currentModule.description;
            document.getElementById('moduleCategory').value = currentModule.category;
            document.getElementById('moduleTags').value = (currentModule.tags || []).join(', ');
            document.getElementById('moduleCode').value = currentModule.code;

            // Aktive Auswahl markieren
            document.querySelectorAll('.module-item').forEach(item => {
                item.classList.remove('active');
            });
            
            const items = document.querySelectorAll('.module-item');
            const sortedModules = Object.values(modules).sort((a, b) => 
                new Date(b.modified) - new Date(a.modified)
            );
            const moduleIndex = sortedModules.findIndex(m => m.id === moduleId);
            if (items[moduleIndex]) {
                items[moduleIndex].classList.add('active');
            }

            updatePreview();
            updateVisualEditor();
        }

        // Vorschau aktualisieren
        function updatePreview() {
            const code = document.getElementById('moduleCode').value;
            const previewContent = document.getElementById('previewContent');
            
            if (code.trim()) {
                previewContent.innerHTML = code;
            } else {
                previewContent.innerHTML = '<p>Kein Code zur Vorschau verf√ºgbar.</p>';
            }
        }

        // Visual Editor aktualisieren
        function updateVisualEditor() {
            const code = document.getElementById('moduleCode').value;
            const visualEditor = document.getElementById('visualEditor');
            
            if (code.trim()) {
                visualEditor.innerHTML = code;
                setTimeout(() => {
                    makeElementsEditable(visualEditor);
                }, 10);
            } else {
                visualEditor.innerHTML = '<p>F√ºgen Sie HTML-Code hinzu, um mit der visuellen Bearbeitung zu beginnen.</p>';
            }
        }

        // Interaktive Module f√ºr Bearbeitung vorbereiten
        function prepareInteractiveModulesForEditing(container) {
            // Accordion-Module behandeln
            handleAccordionModules(container);
            
            // Tab-Module behandeln
            handleTabModules(container);
            
            // Modal/Popup-Module behandeln
            handleModalModules(container);
            
            // Dropdown/Collapse-Module behandeln
            handleDropdownModules(container);
            
            // Carousel/Slider-Module behandeln
            handleCarouselModules(container);
            
            // Toggle/Switch-Module behandeln
            handleToggleModules(container);
        }

        // Accordion-Module f√ºr Bearbeitung vorbereiten
        function handleAccordionModules(container) {
            // Verschiedene Accordion-Selektoren
            const accordionSelectors = [
                '.accordion', '.collapse', '.collapsible',
                '[data-toggle="collapse"]', '[aria-expanded]',
                '.kerberos-accordion', '.faq-item', '.expandable',
                '.toggle-content', '.show-hide'
            ];
            
            accordionSelectors.forEach(selector => {
                const accordions = container.querySelectorAll(selector);
                accordions.forEach(accordion => {
                    makeAccordionEditable(accordion);
                });
            });
            
            // Automatisch ausklappen f√ºr bessere Bearbeitung
            const hiddenContent = container.querySelectorAll('[style*="display: none"], [style*="display:none"], .collapsed, .hidden');
            hiddenContent.forEach(element => {
                if (isAccordionContent(element)) {
                    element.style.display = 'block';
                    element.classList.remove('collapsed', 'hidden');
                    element.classList.add('editor-expanded');
                    
                    // Visual indicator hinzuf√ºgen
                    addInteractiveModuleIndicator(element, 'Accordion-Inhalt (im Editor aufgeklappt)');
                }
            });
        }

        // Pr√ºfen ob Element Accordion-Inhalt ist
        function isAccordionContent(element) {
            const parent = element.parentElement;
            if (!parent) return false;
            
            return parent.classList.contains('accordion') ||
                parent.classList.contains('collapsible') ||
                parent.classList.contains('faq-item') ||
                parent.querySelector('.accordion-header, .collapse-header, .toggle-header') ||
                element.hasAttribute('data-parent') ||
                element.classList.contains('collapse') ||
                element.classList.contains('accordion-body');
        }

        // Tab-Module behandeln
        function handleTabModules(container) {
            const tabSelectors = [
                '.tabs', '.tab-container', '.tabbed-content',
                '[role="tablist"]', '.nav-tabs', '.kerberos-tabs',
                '.tab-navigation'
            ];
            
            tabSelectors.forEach(selector => {
                const tabContainers = container.querySelectorAll(selector);
                tabContainers.forEach(tabContainer => {
                    makeTabModuleEditable(tabContainer);
                });
            });
            
            // Alle Tab-Panels sichtbar machen
            const tabPanels = container.querySelectorAll('.tab-panel, .tab-content, [role="tabpanel"], .tabpanel');
            tabPanels.forEach(panel => {
                panel.style.display = 'block';
                panel.classList.add('editor-visible');
                addInteractiveModuleIndicator(panel, 'Tab-Panel (im Editor sichtbar)');
            });
        }

        // Modal-Module behandeln
        function handleModalModules(container) {
            const modals = container.querySelectorAll('.modal, .popup, .overlay, .lightbox, [role="dialog"]');
            modals.forEach(modal => {
                modal.style.display = 'block';
                modal.style.position = 'relative';
                modal.style.zIndex = 'auto';
                modal.classList.add('editor-modal');
                addInteractiveModuleIndicator(modal, 'Modal/Popup (im Editor sichtbar)');
                makeModalEditable(modal);
            });
        }

        // Dropdown-Module behandeln
        function handleDropdownModules(container) {
            const dropdowns = container.querySelectorAll('.dropdown, .dropdown-menu, .select-options, [data-toggle="dropdown"]');
            dropdowns.forEach(dropdown => {
                dropdown.style.display = 'block';
                dropdown.style.position = 'relative';
                dropdown.classList.add('editor-dropdown');
                addInteractiveModuleIndicator(dropdown, 'Dropdown (im Editor sichtbar)');
            });
        }

        // Carousel-Module behandeln
        function handleCarouselModules(container) {
            const carousels = container.querySelectorAll('.carousel, .slider, .swiper, .slideshow');
            carousels.forEach(carousel => {
                const slides = carousel.querySelectorAll('.slide, .carousel-item, .swiper-slide');
                slides.forEach((slide, index) => {
                    slide.style.display = 'block';
                    slide.style.position = 'relative';
                    slide.classList.add('editor-slide');
                    addInteractiveModuleIndicator(slide, 'Slide ${index + 1} (im Editor sichtbar)');
                });
                makeCarouselEditable(carousel);
            });
        }

        // Toggle-Module behandeln
        function handleToggleModules(container) {
            const toggles = container.querySelectorAll('[data-toggle], .toggle, .switch, .show-hide-toggle');
            toggles.forEach(toggle => {
                const target = getToggleTarget(toggle);
                if (target) {
                    target.style.display = 'block';
                    target.classList.add('editor-toggled');
                    addInteractiveModuleIndicator(target, 'Toggle-Inhalt (im Editor sichtbar)');
                }
            });
        }

        // Toggle-Target finden
        function getToggleTarget(toggle) {
            const targetId = toggle.getAttribute('data-target') || toggle.getAttribute('href');
            if (targetId) {
                return document.querySelector(targetId);
            }
            
            // N√§chstes Geschwister-Element
            return toggle.nextElementSibling;
        }

        // Visual Indicator f√ºr interaktive Module hinzuf√ºgen
        function addInteractiveModuleIndicator(element, text) {
            if (element.querySelector('.interactive-indicator')) return;
            
            const indicator = document.createElement('div');
            indicator.className = 'interactive-indicator';
            indicator.innerHTML = '
                <div style="
                    background: linear-gradient(135deg, #B265E9, #EF8646);
                    color: white;
                    padding: 0.25rem 0.5rem;
                    border-radius: 4px;
                    font-size: 0.7rem;
                    font-weight: 600;
                    position: absolute;
                    top: -5px;
                    right: -5px;
                    z-index: 1000;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
                    border: 1px solid rgba(255,255,255,0.3);
                ">
                    üéÆ ${text}
                </div>
            ';
            
            element.style.position = 'relative';
            element.appendChild(indicator);
        }

        // Accordion editierbar machen
        function makeAccordionEditable(accordion) {
            accordion.classList.add('element-editable');
            accordion.dataset.elementId = 'accordion-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls interactive-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üéÆ';
            editBtn.title = 'Accordion bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editInteractiveModule(accordion, 'accordion');
            };
            
            const toggleBtn = document.createElement('button');
            toggleBtn.className = 'element-btn element-duplicate';
            toggleBtn.innerHTML = 'üëÅÔ∏è';
            toggleBtn.title = 'Alle Bereiche ein-/ausblenden';
            toggleBtn.onclick = (e) => {
                e.stopPropagation();
                toggleAllAccordionPanels(accordion);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Accordion duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(accordion);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Accordion l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(accordion);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(toggleBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            accordion.appendChild(controls);
        }

        // Tab-Module editierbar machen
        function makeTabModuleEditable(tabContainer) {
            tabContainer.classList.add('element-editable');
            tabContainer.dataset.elementId = 'tabs-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls interactive-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üéÆ';
            editBtn.title = 'Tab-Module bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editInteractiveModule(tabContainer, 'tabs');
            };
            
            const showAllBtn = document.createElement('button');
            showAllBtn.className = 'element-btn element-duplicate';
            showAllBtn.innerHTML = 'üëÅÔ∏è';
            showAllBtn.title = 'Alle Tabs anzeigen';
            showAllBtn.onclick = (e) => {
                e.stopPropagation();
                showAllTabPanels(tabContainer);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Tab-Module duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(tabContainer);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Tab-Module l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(tabContainer);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(showAllBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            tabContainer.appendChild(controls);
        }

        // Modal editierbar machen
        function makeModalEditable(modal) {
            modal.classList.add('element-editable');
            modal.dataset.elementId = 'modal-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls interactive-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üéÆ';
            editBtn.title = 'Modal bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editInteractiveModule(modal, 'modal');
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Modal duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(modal);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Modal l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(modal);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            modal.appendChild(controls);
        }

        // Carousel editierbar machen
        function makeCarouselEditable(carousel) {
            carousel.classList.add('element-editable');
            carousel.dataset.elementId = 'carousel-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls interactive-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üéÆ';
            editBtn.title = 'Carousel bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editInteractiveModule(carousel, 'carousel');
            };
            
            const showAllBtn = document.createElement('button');
            showAllBtn.className = 'element-btn element-duplicate';
            showAllBtn.innerHTML = 'üëÅÔ∏è';
            showAllBtn.title = 'Alle Slides anzeigen';
            showAllBtn.onclick = (e) => {
                e.stopPropagation();
                showAllSlides(carousel);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Carousel duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(carousel);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Carousel l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(carousel);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(showAllBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            carousel.appendChild(controls);
        }

        // Interaktive Module bearbeiten
        function editInteractiveModule(element, type) {
            currentEditingElement = element;
            const popup = document.getElementById('textEditorPopup');
            const content = document.getElementById('editorContent');
            const title = document.getElementById('editorTitle');
            
            title.textContent = '${type.charAt(0).toUpperCase() + type.slice(1)}-Modul bearbeiten';
            
            let specificOptions = '';
            
            switch(type) {
                case 'accordion':
                    specificOptions = '
                        <div class="form-group">
                            <label>Accordion-Optionen:</label>
                            <button type="button" id="addAccordionItem" style="width: 100%; padding: 0.5rem; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; margin-bottom: 0.5rem;">‚ûï Neuen Accordion-Bereich hinzuf√ºgen</button>
                            <div class="form-group-inline">
                                <input type="checkbox" id="allowMultiple" ${element.hasAttribute('data-multiple') ? 'checked' : ''}>
                                <label for="allowMultiple">Mehrere Bereiche gleichzeitig √∂ffnen</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Accordion-Bereiche verwalten:</label>
                            <div id="accordionItemsList" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px; padding: 1rem;">
                                <!-- Wird dynamisch gef√ºllt -->
                            </div>
                        </div>
                    ';
                    break;
                    
                case 'tabs':
                    specificOptions = '
                        <div class="form-group">
                            <label>Tab-Optionen:</label>
                            <button type="button" id="addTabItem" style="width: 100%; padding: 0.5rem; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; margin-bottom: 0.5rem;">‚ûï Neuen Tab hinzuf√ºgen</button>
                        </div>
                        <div class="form-group">
                            <label>Tabs verwalten:</label>
                            <div id="tabItemsList" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px; padding: 1rem;">
                                <!-- Wird dynamisch gef√ºllt -->
                            </div>
                        </div>
                    ';
                    break;
                    
                case 'modal':
                    specificOptions = '
                        <div class="form-group">
                            <label>Modal-Gr√∂√üe:</label>
                            <select id="modalSize" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                                <option value="small">Klein</option>
                                <option value="medium" selected>Mittel</option>
                                <option value="large">Gro√ü</option>
                                <option value="fullscreen">Vollbild</option>
                            </select>
                        </div>
                        <div class="form-group-inline">
                            <input type="checkbox" id="modalBackdrop" checked>
                            <label for="modalBackdrop">Hintergrund verdunkeln</label>
                        </div>
                    ';
                    break;
                    
                case 'carousel':
                    specificOptions = '
                        <div class="form-group">
                            <label>Carousel-Optionen:</label>
                            <button type="button" id="addSlide" style="width: 100%; padding: 0.5rem; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; margin-bottom: 0.5rem;">‚ûï Neue Slide hinzuf√ºgen</button>
                        </div>
                        <div class="form-group">
                            <label>Slides verwalten:</label>
                            <div id="slidesList" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px; padding: 1rem;">
                                <!-- Wird dynamisch gef√ºllt -->
                            </div>
                        </div>
                    ';
                    break;
            }
            
            content.innerHTML = '
                <div class="form-group">
                    <label>Modul-Typ: <strong>${type.charAt(0).toUpperCase() + type.slice(1)}</strong></label>
                    <p style="background: #e3f2fd; padding: 1rem; border-radius: 6px; margin: 0.5rem 0;">
                        üí° <strong>Interaktives Modul erkannt!</strong><br>
                        Alle Bereiche wurden im Editor sichtbar gemacht. √Ñnderungen werden in der fertigen Version interaktiv funktionieren.
                    </p>
                </div>
                ${specificOptions}
                <div class="form-group">
                    <label>Gesamtes Modul (HTML):</label>
                    <textarea id="interactiveModuleCode" rows="8" style="font-family: monospace; font-size: 0.9rem; width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">${getCleanHtmlContent(element)}</textarea>
                </div>
            ';
            
            // Event Listeners f√ºr spezifische Optionen
            setupInteractiveModuleEventListeners(type);
            
            popup.style.display = 'block';
        }

        // Event Listeners f√ºr interaktive Module
        function setupInteractiveModuleEventListeners(type) {
            switch(type) {
                case 'accordion':
                    const addAccordionBtn = document.getElementById('addAccordionItem');
                    if (addAccordionBtn) {
                        addAccordionBtn.addEventListener('click', () => {
                            addAccordionItem();
                        });
                    }
                    updateAccordionItemsList();
                    break;
                    
                case 'tabs':
                    const addTabBtn = document.getElementById('addTabItem');
                    if (addTabBtn) {
                        addTabBtn.addEventListener('click', () => {
                            addTabItem();
                        });
                    }
                    updateTabItemsList();
                    break;
                    
                case 'carousel':
                    const addSlideBtn = document.getElementById('addSlide');
                    if (addSlideBtn) {
                        addSlideBtn.addEventListener('click', () => {
                            addCarouselSlide();
                        });
                    }
                    updateSlidesList();
                    break;
            }
        }

        // Accordion-Items-Liste aktualisieren
        function updateAccordionItemsList() {
            const list = document.getElementById('accordionItemsList');
            if (!list || !currentEditingElement) return;
            
            const accordionItems = currentEditingElement.querySelectorAll('.accordion-item, .collapse-item, .faq-item, [data-parent]');
            list.innerHTML = Array.from(accordionItems).map((item, index) => {
                const header = item.querySelector('.accordion-header, .collapse-header, .toggle-header, h3, h4, h5') || item.firstElementChild;
                const headerText = header ? header.textContent.trim() : 'Bereich ${index + 1}';
                
                return '
                    <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem; padding: 0.5rem; background: #f8f9fa; border-radius: 4px;">
                        <span style="flex: 1;">${headerText}</span>
                        <button onclick="editAccordionItemInPlace(${index})" style="padding: 0.25rem 0.5rem; background: #007bff; color: white; border: none; border-radius: 3px; cursor: pointer;">‚úèÔ∏è</button>
                        <button onclick="deleteAccordionItemInPlace(${index})" style="padding: 0.25rem 0.5rem; background: #dc3545; color: white; border: none; border-radius: 3px; cursor: pointer;">üóëÔ∏è</button>
                    </div>
                ';
            }).join('');
        }

        // Alle Accordion-Panels umschalten
        function toggleAllAccordionPanels(accordion) {
            const panels = accordion.querySelectorAll('.accordion-body, .collapse-body, .toggle-content, [style*="display: none"], [style*="display:none"]');
            
            panels.forEach(panel => {
                if (panel.style.display === 'none') {
                    panel.style.display = 'block';
                    panel.classList.add('editor-expanded');
                } else {
                    panel.style.display = 'none';
                    panel.classList.remove('editor-expanded');
                }
            });
            
            updateCodeFromVisual();
            showNotification('üéÆ Accordion-Bereiche umgeschaltet', 'success');
        }

        // Alle Tab-Panels anzeigen
        function showAllTabPanels(tabContainer) {
            const panels = tabContainer.querySelectorAll('.tab-panel, .tab-content, [role="tabpanel"]');
            
            panels.forEach(panel => {
                panel.style.display = 'block';
                panel.classList.add('editor-visible');
            });
            
            updateCodeFromVisual();
            showNotification('üéÆ Alle Tab-Panels sichtbar gemacht', 'success');
        }

        // Alle Slides anzeigen
        function showAllSlides(carousel) {
            const slides = carousel.querySelectorAll('.slide, .carousel-item, .swiper-slide');
            
            slides.forEach((slide, index) => {
                slide.style.display = 'block';
                slide.style.position = 'relative';
                slide.classList.add('editor-slide');
                
                // Zus√§tzliche Slide-Nummer f√ºr bessere √úbersicht
                if (!slide.querySelector('.slide-number')) {
                    const slideNumber = document.createElement('div');
                    slideNumber.className = 'slide-number';
                    slideNumber.style.cssText = '
                        position: absolute;
                        top: 10px;
                        left: 10px;
                        background: rgba(6, 58, 168, 0.8);
                        color: white;
                        padding: 0.25rem 0.5rem;
                        border-radius: 4px;
                        font-size: 0.7rem;
                        font-weight: 600;
                        z-index: 100;
                    ';
                    slideNumber.textContent = 'Slide ${index + 1}';
                    slide.appendChild(slideNumber);
                }
            });
            
            updateCodeFromVisual();
            showNotification('üéÆ Alle Slides sichtbar gemacht', 'success');
        }

        // Elemente editierbar machen (reparierte Version)
        function makeElementsEditable(container) {
            // Interaktive Module f√ºr Bearbeitung vorbereiten
            prepareInteractiveModulesForEditing(container);

            // Editor-eigene Bereiche ausschlie√üen
            function isInEditorArea(element) {
                const editorSelectors = [
                    '.text-editor-popup', '.element-controls', '.toolbar-btn', '.element-btn',
                    '.modal-content', '.sidebar', '.header-content', '.app-header',
                    '.form-group', '.btn', 'button', 'input', 'textarea', 'select', 'label',
                    '.notification', '.welcome-screen', '.tab', '.tab-panel', 
                    '#moduleEditor', '#welcomeScreen'
                ];
                
                return editorSelectors.some(selector => 
                    element.closest(selector) || element.matches(selector)
                );
            }

            // 1. Icons editierbar machen (erweiterte Erkennung)
            const icons = container.querySelectorAll('.icon, .contact-icon, .cta-icon, .phase-icon, .kerberos-feature-icon, .kerberos-highlight-icon, .kerberos-button-icon, .kerberos-card-button-icon, .kerberos-api-symbol, .kerberos-device-symbol, [class*="icon"], [class*="fa-"], span[style*="font-family"][style*="Font Awesome"], span[innerHTML*="&#x"]');
            
            // Zus√§tzlich: Automatische Icon-Erkennung durch Inhalt
            const allSpans = container.querySelectorAll('span');
            allSpans.forEach(span => {
                const content = span.innerHTML;
                // Pr√ºfen auf FontAwesome Unicode oder Emojis
                if (content.match(/&#x[0-9a-fA-F]+;/) || 
                    content.match(/[\u{1F600}-\u{1F64F}]|[\u{1F300}-\u{1F5FF}]|[\u{1F680}-\u{1F6FF}]|[\u{1F1E0}-\u{1F1FF}]|[\u{2600}-\u{26FF}]|[\u{2700}-\u{27BF}]/u) ||
                    span.style.fontFamily?.includes('Font Awesome')) {
                    icons.push(span);
                }
            });
            
            icons.forEach(icon => {
                if (!icon.querySelector('.element-controls') && !isInEditorArea(icon)) {
                    icon.classList.add('icon-editable');
                    icon.onclick = (e) => {
                        e.stopPropagation();
                        editIcon(icon);
                    };
                    
                    // Visual Feedback f√ºr Icons
                    icon.style.position = 'relative';
                    icon.style.cursor = 'pointer';
                    icon.style.transition = 'all 0.3s ease';
                    
                    icon.addEventListener('mouseenter', () => {
                        if (!icon.classList.contains('editing')) {
                            icon.style.transform = 'scale(1.1)';
                            icon.style.filter = 'brightness(1.2)';
                        }
                    });
                    
                    icon.addEventListener('mouseleave', () => {
                        if (!icon.classList.contains('editing')) {
                            icon.style.transform = 'scale(1)';
                            icon.style.filter = 'brightness(1)';
                        }
                    });
                }
            });

            // 2. Bilder editierbar machen
            const images = container.querySelectorAll('img');
            images.forEach(image => {
                if (!image.classList.contains('element-editable') && !isInEditorArea(image)) {
                    makeImageEditable(image);
                }
            });

            // 3. Buttons/Links editierbar machen
            const links = container.querySelectorAll('a, .btn, .contact-cta, .kerberos-cta-button, .kerberos-card-button, [class*="button"], [href]');
            links.forEach(link => {
                if (!link.classList.contains('element-editable') && !isInEditorArea(link)) {
                    makeElementEditable(link);
                }
            });

            // 4. Listen editierbar machen
            const lists = container.querySelectorAll('ul, ol');
            lists.forEach(list => {
                if (!list.classList.contains('element-editable') && !isInEditorArea(list)) {
                    makeListEditable(list);
                }
            });

            // 5. Interaktive und komplexe Elemente
            const interactiveElements = container.querySelectorAll(
                '.kerberos-api-box, .kerberos-device, .kerberos-feature-item, .kerberos-highlight-item, ' +
                '.kerberos-code-line, .kerberos-card-container, .kerberos-terminal-title, ' +
                '.kerberos-api-name, .kerberos-api-description, '.kerberos-device-label, ' +
                '.kerberos-feature-text, .kerberos-highlight-text, .kerberos-code-key, ' +
                '.kerberos-code-value, .process-step, .contact-card, .prize-item, .step-item, ' +
                '.kerberos-flow-step, .kerberos-step-title'
            );
            
            interactiveElements.forEach(element => {
                if (!element.classList.contains('element-editable') && 
                    !element.closest('.element-editable') && 
                    !isInEditorArea(element)) {
                    makeElementEditable(element);
                }
            });

            // 6. Standard editierbare Elemente
            const editableElements = container.querySelectorAll(
                'h1, h2, h3, h4, h5, h6, p, span:not(.icon):not(.contact-icon):not(.cta-icon):not(.kerberos-feature-icon), ' +
                'td, th, li, .kerberos-main-title, .kerberos-description, .kerberos-card-title, ' +
                '.kerberos-card-description, .kerberos-api-title, .kerberos-api-subtitle, ' +
                '.process-title, .process-text'
            );
            
            editableElements.forEach(element => {
                if (!element.classList.contains('element-editable') && 
                    !element.closest('.element-editable') && 
                    !element.classList.contains('icon-editable') &&
                    !isInEditorArea(element) &&
                    element.textContent.trim()) {
                    makeElementEditable(element);
                }
            });
        }

        // Bild direkt editierbar machen (mit Bild-Editor)
        function makeImageEditableDirectly(image) {
            image.classList.add('image-editable', 'element-editable');
            image.dataset.elementId = 'image-' + Date.now() + Math.random();
            
            // Direkter Klick √∂ffnet Bild-Editor
            image.onclick = (e) => {
                e.stopPropagation();
                editImage(image);
            };
            
            image.style.cursor = 'pointer';
            image.style.transition = 'all 0.3s ease';
            
            // Hover-Effekt
            image.addEventListener('mouseenter', () => {
                image.style.filter = 'brightness(1.1)';
                image.style.transform = 'scale(1.02)';
            });
            
            image.addEventListener('mouseleave', () => {
                image.style.filter = 'brightness(1)';
                image.style.transform = 'scale(1)';
            });
            
            // Minimale Controls nur bei Hover
            const controls = document.createElement('div');
            controls.className = 'element-controls';
            controls.style.opacity = '0';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üñºÔ∏è';
            editBtn.title = 'Bild bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editImage(image);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(image);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'L√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(image);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            
            const wrapper = document.createElement('div');
            wrapper.className = 'image-container';
            wrapper.style.position = 'relative';
            wrapper.style.display = 'inline-block';
            
            image.parentNode.insertBefore(wrapper, image);
            wrapper.appendChild(image);
            wrapper.appendChild(controls);
            
            // Controls nur bei Hover zeigen
            wrapper.addEventListener('mouseenter', () => {
                controls.style.opacity = '1';
            });
            
            wrapper.addEventListener('mouseleave', () => {
                controls.style.opacity = '0';
            });
        }

        // Icon direkt editierbar machen (mit Icon-Editor)
        function makeIconEditableDirectly(iconElement) {
            iconElement.classList.add('icon-editable');
            
            // Direkter Klick √∂ffnet Icon-Editor
            iconElement.onclick = (e) => {
                e.stopPropagation();
                editIcon(iconElement);
            };
            
            iconElement.style.position = 'relative';
            iconElement.style.cursor = 'pointer';
            iconElement.style.transition = 'all 0.3s ease';
            
            iconElement.addEventListener('mouseenter', () => {
                iconElement.style.transform = 'scale(1.1)';
                iconElement.style.filter = 'brightness(1.2)';
            });
            
            iconElement.addEventListener('mouseleave', () => {
                iconElement.style.transform = 'scale(1)';
                iconElement.style.filter = 'brightness(1)';
            });
        }

        // Element mit Rich Text Editor editierbar machen
        function makeElementEditableWithRichText(element) {
            element.classList.add('element-editable');
            element.dataset.elementId = 'element-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üé®';
            editBtn.title = 'Rich Text Editor';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                // Direkt Rich Text Editor √∂ffnen
                createRichTextEditor(element);
            };
            
            const htmlBtn = document.createElement('button');
            htmlBtn.className = 'element-btn element-edit';
            htmlBtn.innerHTML = 'üíª';
            htmlBtn.title = 'HTML Editor';
            htmlBtn.onclick = (e) => {
                e.stopPropagation();
                editElement(element);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(element);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'L√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(element);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(htmlBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            element.appendChild(controls);
        }

        // Icon editierbar machen (neue Funktion)
        function makeIconEditable(iconElement) {
            iconElement.classList.add('icon-editable');
            iconElement.onclick = (e) => {
                e.stopPropagation();
                editIcon(iconElement);
            };
            
            // Visual Feedback f√ºr Icons
            iconElement.style.position = 'relative';
            iconElement.style.cursor = 'pointer';
            iconElement.style.transition = 'all 0.3s ease';
            
            iconElement.addEventListener('mouseenter', () => {
                if (!iconElement.classList.contains('editing')) {
                    iconElement.style.transform = 'scale(1.1)';
                    iconElement.style.filter = 'brightness(1.2)';
                }
            });
            
            iconElement.addEventListener('mouseleave', () => {
                if (!iconElement.classList.contains('editing')) {
                    iconElement.style.transform = 'scale(1)';
                    iconElement.style.filter = 'brightness(1)';
                }
            });
        }

        // Einzelnes Element editierbar machen
        function makeElementEditable(element) {
            element.classList.add('element-editable');
            element.dataset.elementId = 'element-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = '‚úèÔ∏è';
            editBtn.title = 'Bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editElement(element);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(element);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Element l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(element);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            element.appendChild(controls);
        }

        // Bild editierbar machen
        function makeImageEditable(image) {
            image.classList.add('image-editable', 'element-editable');
            image.dataset.elementId = 'image-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üñºÔ∏è';
            editBtn.title = 'Bild bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editImage(image);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(image);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Bild l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(image);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            
            // Container f√ºr Bild erstellen falls n√∂tig
            if (!image.parentElement.classList.contains('image-container')) {
                const wrapper = document.createElement('div');
                wrapper.className = 'image-container';
                wrapper.style.position = 'relative';
                wrapper.style.display = 'inline-block';
                image.parentNode.insertBefore(wrapper, image);
                wrapper.appendChild(image);
                wrapper.appendChild(controls);
            } else {
                image.parentElement.appendChild(controls);
            }
        }

        // Element bearbeiten (erweitert mit Rich Text Editor)
        function editElement(element) {
            currentEditingElement = element;
            const popup = document.getElementById('textEditorPopup');
            const content = document.getElementById('editorContent');
            const title = document.getElementById('editorTitle');
            
            title.textContent = '${getElementType(element)} bearbeiten';
            
            let inputHtml = '';
            
            // Button/Link bearbeitung
            if (element.tagName === 'A' || element.classList.contains('btn') || element.classList.contains('contact-cta') || element.getAttribute('href')) {
                const currentHref = element.href || element.getAttribute('href') || '';
                const currentText = getCleanTextContent(element);
                const currentTarget = element.target || '';
                
                inputHtml = '
                    <div class="form-group">
                        <label>Link-Text:</label>
                        <button type="button" id="useRichTextBtn" style="float: right; padding: 0.25rem 0.5rem; background: #009CE6; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 0.8rem;">üé® Rich Text Editor</button>
                        <input type="text" id="linkText" value="${currentText}" placeholder="Button Text">
                    </div>
                    <div class="form-group">
                        <label>Link-URL:</label>
                        <input type="url" id="linkHref" value="${currentHref}" placeholder="https://example.com">
                    </div>
                    <div class="form-group-inline">
                        <input type="checkbox" id="linkNewTab" ${currentTarget === '_blank' ? 'checked' : ''}>
                        <label for="linkNewTab">In neuem Tab √∂ffnen</label>
                    </div>
                ';
            }
            // Text-Element bearbeitung mit Rich Text Option
            else if (isTextElement(element)) {
                const textContent = getCleanTextContent(element);
                inputHtml = '
                    <div class="form-group">
                        <label>Text bearbeiten:</label>
                        <button type="button" id="useRichTextBtn" style="float: right; padding: 0.25rem 0.5rem; background: #009CE6; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 0.8rem;">üé® Rich Text Editor</button>
                        <textarea id="textInput" rows="3">${textContent}</textarea>
                        <small style="display: block; margin-top: 0.5rem; color: #6c757d;">
                            Tipp: Verwenden Sie HTML-Tags f√ºr Formatierungen: &lt;strong&gt;fett&lt;/strong&gt;, &lt;em&gt;kursiv&lt;/em&gt;, &lt;u&gt;unterstrichen&lt;/u&gt;
                        </small>
                    </div>
                ';
            }
            // Interaktive Module und komplexe Elemente
            else if (element.classList.contains('kerberos-api-box') || 
                     element.classList.contains('kerberos-device') ||
                     element.classList.contains('kerberos-feature-item') ||
                     element.classList.contains('kerberos-code-line') ||
                     element.classList.contains('kerberos-card-container')) {
                
                inputHtml = '
                    <div class="form-group">
                        <label>Interaktives Element bearbeiten:</label>
                        <button type="button" id="useRichTextBtn" style="float: right; padding: 0.25rem 0.5rem; background: #009CE6; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 0.8rem;">üé® Rich Text Editor</button>
                        <p style="background: #e3f2fd; padding: 1rem; border-radius: 6px; margin-bottom: 1rem;">
                            üí° <strong>Interaktives Element erkannt!</strong><br>
                            Bearbeiten Sie alle Textinhalte dieses Elements. √Ñnderungen werden auch im nicht-interaktiven Modus √ºbernommen.
                        </p>
                    </div>
                    <div class="form-group">
                        <label>Element-Inhalt (HTML):</label>
                        <textarea id="htmlInput" rows="8" style="font-family: monospace; font-size: 0.9rem;">${getCleanHtmlContent(element)}</textarea>
                    </div>
                    <div class="form-group">
                        <label>Schnell-Bearbeitung - Texte finden und ersetzen:</label>
                        <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 0.5rem; align-items: end;">
                            <div>
                                <label style="font-size: 0.9rem;">Suchen:</label>
                                <input type="text" id="findText" placeholder="Text zum Ersetzen">
                            </div>
                            <div>
                                <label style="font-size: 0.9rem;">Ersetzen durch:</label>
                                <input type="text" id="replaceText" placeholder="Neuer Text">
                            </div>
                            <button type="button" id="replaceBtn" style="padding: 0.5rem 1rem; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">Ersetzen</button>
                        </div>
                    </div>
                ';
            }
            // Allgemeine HTML bearbeitung
            else {
                const cleanHtml = getCleanHtmlContent(element);
                inputHtml = '
                    <div class="form-group">
                        <label>Element Typ: <strong>${getElementType(element)}</strong></label>
                        <button type="button" id="useRichTextBtn" style="float: right; padding: 0.25rem 0.5rem; background: #009CE6; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 0.8rem;">üé® Rich Text Editor</button>
                        <label>HTML Inhalt:</label>
                        <textarea id="htmlInput" rows="6">${cleanHtml}</textarea>
                    </div>
                ';
            }
            
            content.innerHTML = inputHtml;

            // Rich Text Editor als Standard-Option anbieten
            const richTextBtn = document.getElementById('useRichTextBtn');
            if (richTextBtn) {
                richTextBtn.addEventListener('click', () => {
                    popup.style.display = 'none';
                    createRichTextEditor(element);
                });
            } else {
                // Rich Text Button auch f√ºr andere Element-Typen hinzuf√ºgen
                const extraRichTextBtn = document.createElement('button');
                extraRichTextBtn.textContent = 'üé® Rich Text Editor';
                extraRichTextBtn.style.cssText = 'margin-top: 1rem; padding: 0.5rem 1rem; background: #009CE6; color: white; border: none; border-radius: 4px; cursor: pointer; width: 100%;';
                extraRichTextBtn.onclick = () => {
                    popup.style.display = 'none';
                    createRichTextEditor(element);
                };
                content.appendChild(extraRichTextBtn);
            }
            
            // Rich Text Editor Button
            const richTextBtn = document.getElementById('useRichTextBtn');
            if (richTextBtn) {
                richTextBtn.addEventListener('click', () => {
                    popup.style.display = 'none';
                    createRichTextEditor(element);
                });
            }
            
            // Find/Replace f√ºr interaktive Elemente
            const replaceBtn = document.getElementById('replaceBtn');
            if (replaceBtn) {
                replaceBtn.addEventListener('click', () => {
                    const findText = document.getElementById('findText').value;
                    const replaceText = document.getElementById('replaceText').value;
                    const htmlInput = document.getElementById('htmlInput');
                    
                    if (findText) {
                        const newContent = htmlInput.value.replace(new RegExp(findText, 'g'), replaceText);
                        htmlInput.value = newContent;
                        showNotification('‚úÖ "${findText}" wurde durch "${replaceText}" ersetzt', 'success');
                    }
                });
            }
            
            popup.style.display = 'block';
            
            const firstInput = content.querySelector('input, textarea');
            if (firstInput) firstInput.focus();
        }
        function createRichTextEditor(element) {
            currentEditingElement = element;
            const popup = document.getElementById('textEditorPopup');
            const content = document.getElementById('editorContent');
            const title = document.getElementById('editorTitle');
            
            title.textContent = '${getElementType(element)} - Rich Text Editor';
            
            const currentText = getCleanTextContent(element);
            const currentHtml = getCleanHtmlContent(element);
            
            content.innerHTML = '
                <div class="rich-text-toolbar">
                    <div class="toolbar-group">
                        <button type="button" class="toolbar-btn" data-action="bold" title="Fett (Ctrl+B)">
                            <strong>B</strong>
                        </button>
                        <button type="button" class="toolbar-btn" data-action="italic" title="Kursiv (Ctrl+I)">
                            <em>I</em>
                        </button>
                        <button type="button" class="toolbar-btn" data-action="underline" title="Unterstrichen (Ctrl+U)">
                            <u>U</u>
                        </button>
                        <button type="button" class="toolbar-btn" data-action="strikethrough" title="Durchgestrichen">
                            <s>S</s>
                        </button>
                    </div>
                    
                    <div class="toolbar-group">
                        <select class="toolbar-select" id="textColor" title="Textfarbe">
                            <option value="">Farbe w√§hlen</option>
                            <option value="#063AA8" style="color: #063AA8;">Kerberos Blau</option>
                            <option value="#009CE6" style="color: #009CE6;">Kerberos Cyan</option>
                            <option value="#B265E9" style="color: #B265E9;">Kerberos Lila</option>
                            <option value="#EF8646" style="color: #EF8646;">Kerberos Orange</option>
                            <option value="#28a745" style="color: #28a745;">Erfolg Gr√ºn</option>
                            <option value="#dc3545" style="color: #dc3545;">Gefahr Rot</option>
                            <option value="#ffc107" style="color: #ffc107;">Warnung Gelb</option>
                            <option value="#212529" style="color: #212529;">Dunkelgrau</option>
                            <option value="#6c757d" style="color: #6c757d;">Mittelgrau</option>
                        </select>
                        
                        <select class="toolbar-select" id="textSize" title="Textgr√∂√üe">
                            <option value="">Gr√∂√üe w√§hlen</option>
                            <option value="0.8em">Klein (0.8em)</option>
                            <option value="0.9em">Etwas kleiner (0.9em)</option>
                            <option value="1em">Normal (1em)</option>
                            <option value="1.1em">Etwas gr√∂√üer (1.1em)</option>
                            <option value="1.2em">Gro√ü (1.2em)</option>
                            <option value="1.5em">Sehr gro√ü (1.5em)</option>
                            <option value="2em">XXL (2em)</option>
                        </select>
                    </div>
                    
                    <div class="toolbar-group">
                        <button type="button" class="toolbar-btn" data-action="highlight" title="Text hervorheben">
                            <span style="background: #ffeb3b; padding: 2px;">‚ñ†</span>
                        </button>
                        <button type="button" class="toolbar-btn" data-action="link" title="Link einf√ºgen">
                            üîó
                        </button>
                        <button type="button" class="toolbar-btn" data-action="clear" title="Formatierung entfernen">
                            ‚úÇÔ∏è
                        </button>
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Text bearbeiten:</label>
                    <div class="rich-text-container">
                        <div id="richTextEditor" contenteditable="true" class="rich-text-editor" spellcheck="false">
                            ${currentHtml || currentText}
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Vorschau:</label>
                    <div id="richTextPreview" class="rich-text-preview">
                        ${currentHtml || currentText}
                    </div>
                </div>
                
                <div class="form-group">
                    <details>
                        <summary style="cursor: pointer; font-weight: 600; margin-bottom: 0.5rem;">üîß Erweiterte HTML-Bearbeitung</summary>
                        <textarea id="htmlSource" rows="4" style="width: 100%; font-family: monospace; font-size: 0.9rem;">${currentHtml}</textarea>
                    </details>
                </div>
            ';
            
            // Styles f√ºr Rich Text Editor
            const style = document.createElement('style');
            style.textContent = '
                .rich-text-toolbar {
                    display: flex;
                    flex-wrap: wrap;
                    gap: 0.5rem;
                    margin-bottom: 1rem;
                    padding: 0.5rem;
                    background: #f8f9fa;
                    border-radius: 6px;
                    border: 1px solid #e9ecef;
                }
                
                .toolbar-group {
                    display: flex;
                    gap: 0.25rem;
                    align-items: center;
                }
                
                .toolbar-btn {
                    padding: 0.5rem;
                    border: 1px solid #ddd;
                    background: white;
                    border-radius: 4px;
                    cursor: pointer;
                    font-size: 0.9rem;
                    transition: all 0.2s;
                    min-width: 32px;
                    height: 32px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
                
                .toolbar-btn:hover {
                    background: #e9ecef;
                    border-color: #009CE6;
                }
                
                .toolbar-btn.active {
                    background: #009CE6;
                    color: white;
                    border-color: #063AA8;
                }
                
                .toolbar-select {
                    padding: 0.4rem;
                    border: 1px solid #ddd;
                    border-radius: 4px;
                    background: white;
                    font-size: 0.85rem;
                    height: 32px;
                }
                
                .rich-text-container {
                    border: 2px solid #e9ecef;
                    border-radius: 6px;
                    overflow: hidden;
                }
                
                .rich-text-editor {
                    min-height: 150px;
                    padding: 1rem;
                    font-family: 'Inter', sans-serif;
                    font-size: 1rem;
                    line-height: 1.5;
                    border: none;
                    outline: none;
                    background: white;
                }
                
                .rich-text-editor:focus {
                    background: #fafbfc;
                }
                
                .rich-text-preview {
                    min-height: 100px;
                    padding: 1rem;
                    background: #f8f9fa;
                    border: 1px solid #e9ecef;
                    border-radius: 6px;
                    font-family: 'Inter', sans-serif;
                    font-size: 1rem;
                    line-height: 1.5;
                }
                
                .kerberos-text-bold { font-weight: 700; color: #063AA8; }
                .kerberos-text-highlight { 
                    background: linear-gradient(135deg, #063AA8, #009CE6);
                    color: white;
                    padding: 2px 6px;
                    border-radius: 4px;
                }
                .kerberos-text-important {
                    background: #fff3cd;
                    border-left: 4px solid #ffc107;
                    padding: 0.5rem;
                    margin: 0.5rem 0;
                }
            ';
            document.head.appendChild(style);
            
            const editor = document.getElementById('richTextEditor');
            const preview = document.getElementById('richTextPreview');
            const htmlSource = document.getElementById('htmlSource');
            
            // Editor Events
            function updatePreview() {
                const content = editor.innerHTML;
                preview.innerHTML = content;
                htmlSource.value = content;
            }
            
            editor.addEventListener('input', updatePreview);
            editor.addEventListener('paste', (e) => {
                setTimeout(updatePreview, 10);
            });
            
            // HTML Source sync
            htmlSource.addEventListener('input', () => {
                const content = htmlSource.value;
                editor.innerHTML = content;
                preview.innerHTML = content;
            });
            
            // Toolbar Events
            content.querySelectorAll('.toolbar-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    const action = btn.dataset.action;
                    executeRichTextCommand(action, editor);
                    updatePreview();
                });
            });
            
            // Color & Size Events
            document.getElementById('textColor').addEventListener('change', (e) => {
                if (e.target.value) {
                    document.execCommand('foreColor', false, e.target.value);
                    updatePreview();
                }
            });
            
            document.getElementById('textSize').addEventListener('change', (e) => {
                if (e.target.value) {
                    const selection = window.getSelection();
                    if (selection.rangeCount > 0) {
                        const range = selection.getRangeAt(0);
                        const span = document.createElement('span');
                        span.style.fontSize = e.target.value;
                        try {
                            range.surroundContents(span);
                        } catch (ex) {
                            span.appendChild(range.extractContents());
                            range.insertNode(span);
                        }
                        updatePreview();
                    }
                }
            });
            
            // Keyboard Shortcuts
            editor.addEventListener('keydown', (e) => {
                if (e.ctrlKey || e.metaKey) {
                    switch (e.key.toLowerCase()) {
                        case 'b':
                            e.preventDefault();
                            executeRichTextCommand('bold', editor);
                            updatePreview();
                            break;
                        case 'i':
                            e.preventDefault();
                            executeRichTextCommand('italic', editor);
                            updatePreview();
                            break;
                        case 'u':
                            e.preventDefault();
                            executeRichTextCommand('underline', editor);
                            updatePreview();
                            break;
                    }
                }
            });
            
            popup.style.display = 'block';
            editor.focus();
        }
        
        // Rich Text Befehle ausf√ºhren
        function executeRichTextCommand(action, editor) {
            editor.focus();
            
            switch (action) {
                case 'bold':
                    document.execCommand('bold', false, null);
                    break;
                case 'italic':
                    document.execCommand('italic', false, null);
                    break;
                case 'underline':
                    document.execCommand('underline', false, null);
                    break;
                case 'strikethrough':
                    document.execCommand('strikeThrough', false, null);
                    break;
                case 'highlight':
                    document.execCommand('hiliteColor', false, '#ffeb3b');
                    break;
                case 'link':
                    const url = prompt('Link-URL eingeben:', 'https://');
                    if (url && url !== 'https://') {
                        document.execCommand('createLink', false, url);
                    }
                    break;
                case 'clear':
                    document.execCommand('removeFormat', false, null);
                    break;
            }
        }

        // RGB zu Hex konvertieren
        function rgbToHex(color) {
            // Wenn es bereits ein Hex-Wert ist, zur√ºckgeben
            if (color.startsWith('#')) {
                return color;
            }
            
            // RGB-Werte extrahieren
            const rgbMatch = color.match(/rgb\((\d+),\s*(\d+),\s*(\d+)\)/);
            if (rgbMatch) {
                const r = parseInt(rgbMatch[1]);
                const g = parseInt(rgbMatch[2]);
                const b = parseInt(rgbMatch[3]);
                
                // Zu Hex konvertieren
                return "#" + ((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1);
            }
            
            // RGBA-Werte extrahieren (falls vorhanden)
            const rgbaMatch = color.match(/rgba\((\d+),\s*(\d+),\s*(\d+),\s*[\d.]+\)/);
            if (rgbaMatch) {
                const r = parseInt(rgbaMatch[1]);
                const g = parseInt(rgbaMatch[2]);
                const b = parseInt(rgbaMatch[3]);
                
                return "#" + ((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1);
            }
            
            // Fallback
            return '#063AA8';
        }
        
        // Icon bearbeiten (erweitert mit allen FontAwesome-Icons)
        function editIcon(iconElement) {
            currentEditingElement = iconElement;
            const popup = document.getElementById('textEditorPopup');
            const content = document.getElementById('editorContent');
            const title = document.getElementById('editorTitle');
            
            title.textContent = 'Icon bearbeiten';
            
            const currentIcon = iconElement.innerHTML;
            const iconCurrentColor = rgbToHex(iconElement.style.color || getComputedStyle(iconElement).color || '#063AA8');
            const currentSize = iconElement.style.fontSize || getComputedStyle(iconElement).fontSize || '1rem';
            
            content.innerHTML = '
                <div class="form-group">
                    <label>Icon ausw√§hlen:</label>
                    <div style="margin-bottom: 1rem;">
                        <input type="text" id="iconSearch" placeholder="üîç Icons suchen..." style="width: 100%; padding: 0.5rem; margin-bottom: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                        <select id="iconCategory" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                            <option value="all">üìÅ Alle Kategorien (${Object.keys(iconCollections.fontawesome).length} Icons)</option>
                            <option value="Navigation">üß≠ Navigation</option>
                            <option value="Personen">üë• Personen</option>
                            <option value="Kommunikation">üìû Kommunikation</option>
                            <option value="Status">‚úÖ Status</option>
                            <option value="Compliance">üõ°Ô∏è Compliance</option>
                            <option value="Technologie">üíª Technologie</option>
                            <option value="Dokumente">üìÑ Dokumente</option>
                            <option value="Zeit">‚è∞ Zeit</option>
                            <option value="Business">üíº Business</option>
                            <option value="Tools">üîß Tools</option>
                            <option value="Bildung & Training">üéì Bildung & Training</option>
                            <option value="Erweiterte Business">üìä Erweiterte Business</option>
                            <option value="Marketing & Web">üåê Marketing & Web</option>
                            <option value="Workflow & Status">‚ö° Workflow & Status</option>
                            <option value="Erweiterte Sicherheit">üîê Erweiterte Sicherheit</option>
                            <option value="Dokument-Typen">üìã Dokument-Typen</option>
                            <option value="Industrie-spezifisch">üè¢ Industrie-spezifisch</option>
                            <option value="Verschiedenes">‚≠ê Verschiedenes</option>
                        </select>
                        <div style="text-align: center; margin-top: 0.5rem; font-size: 0.8rem; color: #6c757d;">
                            <span id="iconCounter">W√§hlen Sie eine Kategorie</span>
                        </div>
                    </div>
                    <div id="iconGrid" class="icon-grid" style="max-height: 300px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px; padding: 1rem;">
                        <!-- Icons werden hier geladen -->
                    </div>
                </div>
                <div class="form-group">
                    <label>Aktuelles Icon (Unicode):</label>
                    <input type="text" id="customIcon" value="${currentIcon}" placeholder="&#xf00c; oder üî•">
                </div>
                <div class="form-group">
                    <label>Icon-Farbe:</label>
                    <div class="icon-color-picker">
                        ${Object.entries(iconCollections.iconColors).map(([name, color]) => 
                            '<div class="color-option ${iconCurrentColor === color ? 'selected' : ''}" 
                                data-color="${color}" 
                                style="background-color: ${color};" 
                                title="${name}"></div>'
                        ).join('')}
                    </div>
                    <input type="color" id="customColor" value="${iconCurrentColor}" style="width: 100%; margin-top: 0.5rem;">
                </div>
                <div class="form-group">
                    <label>Icon-Gr√∂√üe:</label>
                    <select id="iconSize" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                        <option value="0.75rem" ${currentSize === '0.75rem' ? 'selected' : ''}>Klein (0.75rem)</option>
                        <option value="1rem" ${currentSize === '1rem' ? 'selected' : ''}>Normal (1rem)</option>
                        <option value="1.25rem" ${currentSize === '1.25rem' ? 'selected' : ''}>Gro√ü (1.25rem)</option>
                        <option value="1.5rem" ${currentSize === '1.5rem' ? 'selected' : ''}>Sehr gro√ü (1.5rem)</option>
                        <option value="2rem" ${currentSize === '2rem' ? 'selected' : ''}>XXL (2rem)</option>
                        <option value="2.5rem" ${currentSize === '2.5rem' ? 'selected' : ''}>XXXL (2.5rem)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Vorschau:</label>
                    <div id="iconPreview" style="padding: 1rem; background: #f8f9fa; border-radius: 4px; text-align: center; font-size: 2rem;">
                        <span style="color: ${iconCurrentColor}; font-size: ${currentSize}; font-family: 'Font Awesome 5 Pro';">${currentIcon}</span>
                    </div>
                </div>
            ';
            
            // Icon-Grid laden
            loadIconGrid('all');
            
            // Event Listeners
            const iconSearch = document.getElementById('iconSearch');
            const iconCategory = document.getElementById('iconCategory');
            const customIcon = document.getElementById('customIcon');
            const customColor = document.getElementById('customColor');
            const iconSize = document.getElementById('iconSize');
            const iconPreview = document.getElementById('iconPreview');
            
            function updatePreview() {
                const icon = customIcon.value;
                const color = customColor.value;
                const size = iconSize.value;
                iconPreview.innerHTML = '<span style="color: ${color}; font-size: ${size}; font-family: 'Font Awesome 5 Pro';">${icon}</span>';
            }
            
            // Search functionality
            iconSearch.addEventListener('input', (e) => {
                filterIcons(e.target.value, iconCategory.value);
            });
            
            iconCategory.addEventListener('change', (e) => {
                loadIconGrid(e.target.value);
                filterIcons(iconSearch.value, e.target.value);
            });
            
            customIcon.addEventListener('input', updatePreview);
            customColor.addEventListener('input', updatePreview);
            iconSize.addEventListener('change', updatePreview);
            
            // Color picker
            content.querySelectorAll('.color-option').forEach(option => {
                option.addEventListener('click', () => {
                    content.querySelectorAll('.color-option').forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    customColor.value = option.dataset.color;
                    updatePreview();
                });
            });
            
            popup.style.display = 'block';
            iconSearch.focus();
        }

        // Icon-Grid laden (erweitert)
        function loadIconGrid(category) {
            const iconGrid = document.getElementById('iconGrid');
            const iconCounter = document.getElementById('iconCounter');
            if (!iconGrid) return;
            
            let iconsToShow = {};
            
            if (category === 'all') {
                iconsToShow = iconCollections.fontawesome;
            } else if (iconCollections.categories[category]) {
                iconCollections.categories[category].forEach(iconName => {
                    if (iconCollections.fontawesome[iconName]) {
                        iconsToShow[iconName] = iconCollections.fontawesome[iconName];
                    }
                });
            }
            
            const iconCount = Object.keys(iconsToShow).length;
            if (iconCounter) {
                iconCounter.textContent = '${iconCount} Icons in dieser Kategorie';
            }
            
            iconGrid.innerHTML = Object.entries(iconsToShow).map(([name, unicode]) => '
                <div class="icon-option" data-unicode="${unicode}" title="${name}" style="
                    padding: 0.75rem 0.5rem;
                    border: 1px solid #e9ecef;
                    border-radius: 6px;
                    cursor: pointer;
                    transition: all 0.3s ease;
                    text-align: center;
                    background: white;
                    position: relative;
                    overflow: hidden;
                ">
                    <span style="
                        font-family: 'Font Awesome 5 Pro'; 
                        font-weight: 300;
                        font-size: 1.5rem;
                        color: #063AA8;
                        display: block;
                        margin-bottom: 0.5rem;
                    ">${unicode}</span>
                    <div style="
                        font-size: 0.7rem; 
                        color: #6c757d;
                        text-align: center;
                        line-height: 1.2;
                        word-break: break-word;
                        height: 2.4em;
                        overflow: hidden;
                        display: -webkit-box;
                        -webkit-line-clamp: 2;
                        -webkit-box-orient: vertical;
                    ">${name}</div>
                </div>
            ').join('');
            
            // Icon selection mit verbessertem Feedback
            iconGrid.querySelectorAll('.icon-option').forEach(option => {
                option.addEventListener('mouseenter', () => {
                    option.style.borderColor = '#009CE6';
                    option.style.background = '#f8f9fa';
                    option.style.transform = 'translateY(-2px)';
                    option.style.boxShadow = '0 4px 12px rgba(0, 156, 230, 0.15)';
                });
                
                option.addEventListener('mouseleave', () => {
                    if (!option.classList.contains('selected')) {
                        option.style.borderColor = '#e9ecef';
                        option.style.background = 'white';
                        option.style.transform = 'translateY(0)';
                        option.style.boxShadow = 'none';
                    }
                });
                
                option.addEventListener('click', () => {
                    iconGrid.querySelectorAll('.icon-option').forEach(opt => {
                        opt.classList.remove('selected');
                        opt.style.borderColor = '#e9ecef';
                        opt.style.background = 'white';
                        opt.style.transform = 'translateY(0)';
                        opt.style.boxShadow = 'none';
                    });
                    
                    option.classList.add('selected');
                    option.style.borderColor = '#063AA8';
                    option.style.background = 'linear-gradient(135deg, #f8f9fa, #e9ecef)';
                    option.style.transform = 'translateY(-2px)';
                    option.style.boxShadow = '0 4px 12px rgba(6, 58, 168, 0.2)';
                    
                    document.getElementById('customIcon').value = option.dataset.unicode;
                    updateIconPreview();
                    
                    // Success-Feedback
                    showNotification('‚úÖ Icon "${option.title}" ausgew√§hlt', 'success');
                });
            });
        }

        // Icons filtern
        function filterIcons(searchTerm, category) {
            const iconGrid = document.getElementById('iconGrid');
            if (!iconGrid) return;
            
            const options = iconGrid.querySelectorAll('.icon-option');
            options.forEach(option => {
                const iconName = option.title.toLowerCase();
                const matchesSearch = searchTerm === '' || iconName.includes(searchTerm.toLowerCase());
                option.style.display = matchesSearch ? 'block' : 'none';
            });
        }

        // Icon-Vorschau aktualisieren
        function updateIconPreview() {
            const iconPreview = document.getElementById('iconPreview');
            const customIcon = document.getElementById('customIcon');
            const customColor = document.getElementById('customColor');
            const iconSize = document.getElementById('iconSize');
            
            if (iconPreview && customIcon && customColor && iconSize) {
                iconPreview.innerHTML = '<span style="color: ${customColor.value}; font-size: ${iconSize.value}; font-family: 'Font Awesome 5 Pro';">${customIcon.value}</span>';
            }
        }

        // Liste editierbar machen (erweitert)
        function makeListEditable(listElement) {
            listElement.classList.add('element-editable');
            listElement.dataset.elementId = 'list-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls';
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = 'üìù';
            editBtn.title = 'Liste bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editList(listElement);
            };
            
            const addBtn = document.createElement('button');
            addBtn.className = 'element-btn element-duplicate';
            addBtn.innerHTML = '‚ûï';
            addBtn.title = 'Punkt hinzuf√ºgen';
            addBtn.onclick = (e) => {
                e.stopPropagation();
                addListItem(listElement);
            };
            
            const duplicateBtn = document.createElement('button');
            duplicateBtn.className = 'element-btn element-duplicate';
            duplicateBtn.innerHTML = 'üìã';
            duplicateBtn.title = 'Liste duplizieren';
            duplicateBtn.onclick = (e) => {
                e.stopPropagation();
                duplicateElement(listElement);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Liste l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(listElement);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(addBtn);
            controls.appendChild(duplicateBtn);
            controls.appendChild(deleteBtn);
            listElement.appendChild(controls);
            
            // Liste-Items editierbar machen
            listElement.querySelectorAll('li').forEach(li => {
                if (!li.classList.contains('element-editable')) {
                    makeListItemEditable(li);
                }
            });
        }

        // Listen-Item editierbar machen
        function makeListItemEditable(liElement) {
            liElement.classList.add('element-editable');
            liElement.dataset.elementId = 'listitem-' + Date.now() + Math.random();
            
            const controls = document.createElement('div');
            controls.className = 'element-controls';
            controls.style.right = '25px'; // Platz f√ºr andere Controls
            
            const editBtn = document.createElement('button');
            editBtn.className = 'element-btn element-edit';
            editBtn.innerHTML = '‚úèÔ∏è';
            editBtn.title = 'Punkt bearbeiten';
            editBtn.onclick = (e) => {
                e.stopPropagation();
                editElement(liElement);
            };
            
            const deleteBtn = document.createElement('button');
            deleteBtn.className = 'element-btn element-delete';
            deleteBtn.innerHTML = '√ó';
            deleteBtn.title = 'Punkt l√∂schen';
            deleteBtn.onclick = (e) => {
                e.stopPropagation();
                deleteElement(liElement);
            };
            
            controls.appendChild(editBtn);
            controls.appendChild(deleteBtn);
            liElement.appendChild(controls);
        }

        // Liste bearbeiten
        function editList(listElement) {
            currentEditingElement = listElement;
            const popup = document.getElementById('textEditorPopup');
            const content = document.getElementById('editorContent');
            const title = document.getElementById('editorTitle');
            
            title.textContent = 'Liste bearbeiten';
            
            const isOrderedList = listElement.tagName === 'OL';
            const currentStyle = listElement.style.listStyleType || (isOrderedList ? 'decimal' : 'disc');
            
            content.innerHTML = '
                <div class="form-group">
                    <label>Listen-Typ:</label>
                    <select id="listType" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                        <option value="ul" ${!isOrderedList ? 'selected' : ''}>Ungeordnete Liste (‚Ä¢)</option>
                        <option value="ol" ${isOrderedList ? 'selected' : ''}>Geordnete Liste (1.)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Listen-Stil:</label>
                    <select id="customListStyle" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                        ${Object.entries(iconCollections.listStyles).map(([name, value]) => 
                            '<option value="${value}" ${currentStyle === value ? 'selected' : ''}>${name}</option>'
                        ).join('')}
                    </select>
                </div>
                <div class="form-group">
                    <label>Neuen Punkt hinzuf√ºgen:</label>
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="text" id="newListItem" placeholder="Neuer Listenpunkt" style="flex: 1; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                        <button type="button" id="addListItemBtn" style="padding: 0.5rem 1rem; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">‚ûï Hinzuf√ºgen</button>
                    </div>
                </div>
                <div class="form-group">
                    <label>Vorhandene Punkte:</label>
                    <div id="listItemsEditor" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px; padding: 1rem;">
                        <!-- Wird dynamisch gef√ºllt -->
                    </div>
                </div>
            ';
            
            // Vorhandene Items anzeigen
            updateListItemsEditor();
            
            // Event Listeners
            document.getElementById('listType').addEventListener('change', (e) => {
                const newType = e.target.value;
                const newElement = document.createElement(newType.toUpperCase());
                
                // Alle Attribute und Styles kopieren
                Array.from(listElement.attributes).forEach(attr => {
                    newElement.setAttribute(attr.name, attr.value);
                });
                newElement.style.cssText = listElement.style.cssText;
                
                // Alle Kinder kopieren
                newElement.innerHTML = listElement.innerHTML;
                
                // Element ersetzen
                listElement.parentNode.replaceChild(newElement, listElement);
                currentEditingElement = newElement;
                
                // Neue Liste editierbar machen
                setTimeout(() => {
                    makeListEditable(newElement);
                }, 10);
            });
            
            document.getElementById('addListItemBtn').addEventListener('click', () => {
                const newItemText = document.getElementById('newListItem').value.trim();
                if (newItemText) {
                    addListItemToList(newItemText);
                    document.getElementById('newListItem').value = '';
                    updateListItemsEditor();
                }
            });
            
            document.getElementById('newListItem').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    document.getElementById('addListItemBtn').click();
                }
            });
            
            popup.style.display = 'block';
        }

        // Listenpunkt zur Liste hinzuf√ºgen
        function addListItemToList(text) {
            const newLi = document.createElement('li');
            newLi.textContent = text;
            currentEditingElement.appendChild(newLi);
            makeListItemEditable(newLi);
        }

        // List-Items Editor aktualisieren
        function updateListItemsEditor() {
            const editor = document.getElementById('listItemsEditor');
            if (!editor || !currentEditingElement) return;
            
            const items = currentEditingElement.querySelectorAll('li');
            editor.innerHTML = Array.from(items).map((li, index) => {
                const text = li.textContent.trim();
                return '
                    <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem; padding: 0.5rem; background: #f8f9fa; border-radius: 4px;">
                        <span style="flex: 1;">${text}</span>
                        <button onclick="editListItemInPlace(${index})" style="padding: 0.25rem 0.5rem; background: #007bff; color: white; border: none; border-radius: 3px; cursor: pointer;">‚úèÔ∏è</button>
                        <button onclick="deleteListItemInPlace(${index})" style="padding: 0.25rem 0.5rem; background: #dc3545; color: white; border: none; border-radius: 3px; cursor: pointer;">üóëÔ∏è</button>
                    </div>
                ';
            }).join('');
        }

        // Listenpunkt in Place bearbeiten
        function editListItemInPlace(index) {
            const items = currentEditingElement.querySelectorAll('li');
            const item = items[index];
            if (!item) return;
            
            const currentText = item.textContent.trim();
            const newText = prompt('Text bearbeiten:', currentText);
            
            if (newText !== null && newText.trim()) {
                item.textContent = newText.trim();
                updateListItemsEditor();
                updateCodeFromVisual();
            }
        }

        // Listenpunkt in Place l√∂schen
        function deleteListItemInPlace(index) {
            const items = currentEditingElement.querySelectorAll('li');
            const item = items[index];
            if (!item) return;
            
            if (confirm('Diesen Listenpunkt l√∂schen?')) {
                item.remove();
                updateListItemsEditor();
                updateCodeFromVisual();
            }
        }

        // Listenpunkt hinzuf√ºgen
        function addListItem(listElement) {
            const newText = prompt('Neuen Listenpunkt eingeben:');
            if (newText && newText.trim()) {
                const newLi = document.createElement('li');
                newLi.textContent = newText.trim();
                listElement.appendChild(newLi);
                makeListItemEditable(newLi);
                updateCodeFromVisual();
                showNotification('‚úÖ Neuer Listenpunkt hinzugef√ºgt!', 'success');
            }
        }


        // Bild bearbeiten (erweitert)
        function editImage(imageElement) {
            currentEditingElement = imageElement;
            const popup = document.getElementById('textEditorPopup');
            const content = document.getElementById('editorContent');
            const title = document.getElementById('editorTitle');
            
            title.textContent = 'Bild bearbeiten';
            
            const currentSrc = imageElement.src || '';
            const currentAlt = imageElement.alt || '';
            const currentWidth = imageElement.style.width || imageElement.width || '';
            const currentHeight = imageElement.style.height || imageElement.height || '';
            const currentObjectFit = imageElement.style.objectFit || 'cover';
            
            // Pr√ºfen ob Bild in einem Link ist
            const parentLink = imageElement.closest('a');
            const currentLink = parentLink ? parentLink.href : '';
            const currentTarget = parentLink ? parentLink.target : '';
            
            content.innerHTML = '
                <div class="form-group">
                    <label>Bild-URL:</label>
                    <input type="url" id="imageUrl" value="${currentSrc}" placeholder="https://example.com/image.jpg">
                    <button type="button" id="browseUnsplash" style="margin-top: 0.5rem; padding: 0.5rem; background: #009CE6; color: white; border: none; border-radius: 4px; cursor: pointer;">üì∑ Unsplash durchsuchen</button>
                </div>
                <div class="form-group">
                    <label>Alt-Text (Beschreibung):</label>
                    <input type="text" id="imageAlt" value="${currentAlt}" placeholder="Beschreibung des Bildes">
                </div>
                <div class="form-group">
                    <label>Bildgr√∂√üe:</label>
                    <div class="size-controls">
                        <input type="text" id="imageWidth" value="${currentWidth}" placeholder="Breite (z.B. 300px, 50%)">
                        <input type="text" id="imageHeight" value="${currentHeight}" placeholder="H√∂he (z.B. 200px, auto)">
                    </div>
                </div>
                <div class="form-group">
                    <label>Bild-Skalierung:</label>
                    <select id="imageObjectFit">
                        <option value="cover" ${currentObjectFit === 'cover' ? 'selected' : ''}>Cover (beschneiden)</option>
                        <option value="contain" ${currentObjectFit === 'contain' ? 'selected' : ''}>Contain (alles sichtbar)</option>
                        <option value="fill" ${currentObjectFit === 'fill' ? 'selected' : ''}>Fill (verzerren)</option>
                        <option value="scale-down" ${currentObjectFit === 'scale-down' ? 'selected' : ''}>Scale-down</option>
                        <option value="none" ${currentObjectFit === 'none' ? 'selected' : ''}>Original</option>
                    </select>
                </div>
                <div class="form-group-inline">
                    <input type="checkbox" id="imageResponsive" ${imageElement.style.maxWidth === '100%' ? 'checked' : ''}>
                    <label for="imageResponsive">Responsive (max-width: 100%)</label>
                </div>
                <div class="form-group">
                    <label>Bild verlinken (optional):</label>
                    <input type="url" id="imageLink" value="${currentLink}" placeholder="https://example.com (leer = kein Link)">
                    <div class="form-group-inline" style="margin-top: 0.5rem;">
                        <input type="checkbox" id="imageLinkNewTab" ${currentTarget === '_blank' ? 'checked' : ''}>
                        <label for="imageLinkNewTab">In neuem Tab √∂ffnen</label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Schnell-Gr√∂√üen:</label>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 0.5rem; margin-top: 0.5rem;">
                        <button type="button" class="quick-size-btn" data-width="100%" data-height="auto">Vollbreite</button>
                        <button type="button" class="quick-size-btn" data-width="50%" data-height="auto">Halbe Breite</button>
                        <button type="button" class="quick-size-btn" data-width="300px" data-height="200px">300x200px</button>
                        <button type="button" class="quick-size-btn" data-width="400px" data-height="300px">400x300px</button>
                        <button type="button" class="quick-size-btn" data-width="150px" data-height="150px">Quadrat klein</button>
                        <button type="button" class="quick-size-btn" data-width="" data-height="">Original</button>
                    </div>
                </div>
            ';
            
            // Event Listeners f√ºr Schnell-Gr√∂√üen
            content.querySelectorAll('.quick-size-btn').forEach(btn => {
                btn.style.cssText = 'padding: 0.5rem; border: 1px solid #ddd; background: #f8f9fa; border-radius: 4px; cursor: pointer; font-size: 0.8rem;';
                btn.addEventListener('click', () => {
                    document.getElementById('imageWidth').value = btn.dataset.width;
                    document.getElementById('imageHeight').value = btn.dataset.height;
                });
                btn.addEventListener('mouseenter', () => btn.style.background = '#e9ecef');
                btn.addEventListener('mouseleave', () => btn.style.background = '#f8f9fa');
            });
            
            // Unsplash Browser (vereinfacht)
            document.getElementById('browseUnsplash').addEventListener('click', () => {
                const keywords = prompt('Suchbegriff f√ºr Unsplash (englisch):', 'business compliance');
                if (keywords) {
                    const unsplashUrl = 'https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80';
                    document.getElementById('imageUrl').value = unsplashUrl;
                    showNotification('üí° Beispiel-Bild eingef√ºgt. Besuchen Sie unsplash.com f√ºr mehr Bilder.', 'success');
                }
            });
            
            popup.style.display = 'block';
            document.getElementById('imageUrl').focus();
        }

        // Helper-Funktionen
        function isTextElement(element) {
            const textTags = ['H1', 'H2', 'H3', 'H4', 'H5', 'H6', 'P', 'SPAN', 'A', 'TD', 'TH', 'LI'];
            return textTags.includes(element.tagName);
        }

        function getCleanTextContent(element) {
            const clone = element.cloneNode(true);
            const controls = clone.querySelector('.element-controls');
            if (controls) controls.remove();
            return clone.textContent.trim();
        }

        function getCleanHtmlContent(element) {
            const clone = element.cloneNode(true);
            const controls = clone.querySelector('.element-controls');
            if (controls) controls.remove();
            clone.classList.remove('element-editable', 'selected', 'icon-editable', 'image-editable');
            clone.removeAttribute('data-element-id');
            clone.removeAttribute('contenteditable');
            return clone.innerHTML;
        }

        function getElementType(element) {
            if (element.tagName === 'IMG') return 'Bild';
            if (element.tagName === 'A' || element.classList.contains('btn') || element.classList.contains('contact-cta')) return 'Button/Link';
            if (element.tagName === 'UL' || element.tagName === 'OL') return 'Liste';
            if (element.tagName === 'LI') return 'Listen-Punkt';
            if (element.tagName.startsWith('H')) return '√úberschrift (${element.tagName})';
            if (element.tagName === 'P') return 'Absatz';
            if (element.tagName === 'DIV') return 'Container';
            if (element.tagName === 'TD') return 'Tabellenzelle';
            if (element.tagName === 'TH') return 'Tabellenkopf';
            return element.tagName;
        }

        function duplicateElement(element) {
            const clonedElement = element.cloneNode(true);
            
            // Alle Editor-spezifischen Klassen entfernen
            clonedElement.classList.remove('element-editable', 'selected', 'icon-editable', 'image-editable', 'editing');
            clonedElement.removeAttribute('data-element-id');
            clonedElement.removeAttribute('contenteditable');
            
            // Editor-spezifische Styles entfernen
            clonedElement.style.outline = '';
            clonedElement.style.outlineOffset = '';
            clonedElement.style.border = '';
            clonedElement.style.boxShadow = '';
            clonedElement.style.position = '';
            clonedElement.style.cursor = '';
            clonedElement.style.transition = '';
            clonedElement.style.transform = '';
            clonedElement.style.filter = '';

            // Spezifische Editor-Box-Shadow-Styles entfernen
            clonedElement.style.removeProperty('box-shadow');
            clonedElement.style.removeProperty('outline');
            clonedElement.style.removeProperty('border');
            clonedElement.style.removeProperty('transition');
            clonedElement.style.removeProperty('transform');
            clonedElement.style.removeProperty('filter');
            clonedElement.style.removeProperty('cursor');
            clonedElement.style.removeProperty('position');

            // Alle Inline-Styles pr√ºfen und Editor-spezifische entfernen
            const styleAttr = clonedElement.getAttribute('style');
            if (styleAttr) {
                let cleanedStyle = styleAttr
                    // Spezifische blaue Editor-Box-Shadows entfernen
                    .replace(/box-shadow:\s*rgba\s*\(\s*0\s*,\s*156\s*,\s*230[^)]*\)[^;]*;?/gi, '')
                    .replace(/box-shadow:\s*rgba\s*\(\s*6\s*,\s*58\s*,\s*168[^)]*\)[^;]*;?/gi, '')
                    // Alle Editor-spezifischen Box-Shadows
                    .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+2px[^;]*;?/gi, '')  // 2px outline-style shadows
                    .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+3px[^;]*;?/gi, '')  // 3px outline-style shadows
                    // Weitere Editor-Shadow-Pattern
                    .replace(/box-shadow:\s*[^;]*rgba\([^)]*\)\s+0px\s+0px\s+0px[^;]*;?/gi, '')
                    .replace(/outline:\s*[^;]*;?/gi, '')
                    .replace(/border:\s*[^;]*dashed[^;]*;?/gi, '')  // Gestrichelte Editor-Borders
                    .replace(/transition:\s*all\s+0\.3s\s+ease[^;]*;?/gi, '')  // Editor-Transitions
                    .replace(/cursor:\s*pointer[^;]*;?/gi, '')  // Editor-Cursor
                    .replace(/position:\s*relative[^;]*;?/gi, '')  // Editor-Position (nur wenn durch Editor hinzugef√ºgt)
                    .replace(/transform:\s*[^;]*;?/gi, '')  // Editor-Transforms
                    .replace(/filter:\s*[^;]*;?/gi, '')  // Editor-Filters
                    .replace(/;+/g, ';')  // Mehrfache Semikolons entfernen
                    .replace(/^\s*;|;\s*$/g, '')  // F√ºhrende/abschlie√üende Semikolons entfernen
                    .trim();
                
                if (cleanedStyle) {
                    clonedElement.setAttribute('style', cleanedStyle);
                } else {
                    clonedElement.removeAttribute('style');
                }
            }
            
            // Alle Kontrollelemente entfernen
            const controls = clonedElement.querySelectorAll('.element-controls');
            controls.forEach(control => control.remove());
            
            // Alle Kind-Elemente s√§ubern
            const childEditableElements = clonedElement.querySelectorAll('.element-editable, .icon-editable, .image-editable, .selected, .editing');
            childEditableElements.forEach(child => {
                child.classList.remove('element-editable', 'selected', 'icon-editable', 'image-editable', 'editing');
                child.removeAttribute('data-element-id');
                child.removeAttribute('contenteditable');
                child.removeAttribute('onclick');
                
                // Editor-Styles von Kind-Elementen entfernen
                child.style.outline = '';
                child.style.outlineOffset = '';
                child.style.border = '';
                child.style.boxShadow = '';
                child.style.position = '';
                child.style.cursor = '';
                child.style.transition = '';
                child.style.transform = '';
                child.style.filter = '';

                // Spezifische Editor-Styles auch bei Kindern entfernen
                child.style.removeProperty('box-shadow');
                child.style.removeProperty('outline');
                child.style.removeProperty('border');
                child.style.removeProperty('transition');
                child.style.removeProperty('transform');
                child.style.removeProperty('filter');
                child.style.removeProperty('cursor');
                child.style.removeProperty('position');

                // Inline-Styles der Kind-Elemente s√§ubern
                const childStyleAttr = child.getAttribute('style');
                if (childStyleAttr) {
                    let cleanedChildStyle = childStyleAttr
                        // Spezifische blaue Editor-Box-Shadows entfernen
                        .replace(/box-shadow:\s*rgba\s*\(\s*0\s*,\s*156\s*,\s*230[^)]*\)[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*rgba\s*\(\s*6\s*,\s*58\s*,\s*168[^)]*\)[^;]*;?/gi, '')
                        // Alle Editor-spezifischen Box-Shadows
                        .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+2px[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+3px[^;]*;?/gi, '')
                        // Weitere Editor-Shadow-Pattern
                        .replace(/box-shadow:\s*[^;]*rgba\([^)]*\)\s+0px\s+0px\s+0px[^;]*;?/gi, '')
                        .replace(/outline:\s*[^;]*;?/gi, '')
                        .replace(/border:\s*[^;]*dashed[^;]*;?/gi, '')
                        .replace(/transition:\s*all\s+0\.3s\s+ease[^;]*;?/gi, '')
                        .replace(/cursor:\s*pointer[^;]*;?/gi, '')
                        .replace(/position:\s*relative[^;]*;?/gi, '')
                        .replace(/transform:\s*[^;]*;?/gi, '')
                        .replace(/filter:\s*[^;]*;?/gi, '')
                        .replace(/;+/g, ';')
                        .replace(/^\s*;|;\s*$/g, '')
                        .trim();
                    
                    if (cleanedChildStyle) {
                        child.setAttribute('style', cleanedChildStyle);
                    } else {
                        child.removeAttribute('style');
                    }
                }
                
                // Spezielle Behandlung f√ºr verschiedene Element-Typen
                if (child.classList.contains('icon-editable')) {
                    child.style.position = '';
                    child.style.cursor = '';
                    child.style.transition = '';
                }
                
                if (child.classList.contains('image-editable')) {
                    child.style.border = '';
                    child.style.cursor = '';
                    child.style.transition = '';
                }
            });
            
            // Spezielle Behandlung f√ºr Container-Elemente
            const imageContainers = clonedElement.querySelectorAll('.image-container');
            imageContainers.forEach(container => {
                const img = container.querySelector('img');
                if (img) {
                    // Bild aus Container extrahieren und Container entfernen
                    container.parentNode.insertBefore(img, container);
                    container.remove();
                }
            });
            
            // Alle onclick-Handler entfernen
            clonedElement.removeAttribute('onclick');
            const elementsWithOnClick = clonedElement.querySelectorAll('[onclick]');
            elementsWithOnClick.forEach(el => el.removeAttribute('onclick'));
            
            // Event Listeners entfernen (falls vorhanden)
            const newElement = clonedElement.cloneNode(true);
            
            // Element einf√ºgen
            if (element.classList.contains('image-editable') && element.parentElement.classList.contains('image-container')) {
                element.parentElement.parentNode.insertBefore(newElement, element.parentElement.nextSibling);
            } else {
                element.parentNode.insertBefore(newElement, element.nextSibling);
            }
            
            // Nach kurzer Verz√∂gerung das neue Element editierbar machen
            setTimeout(() => {
                if (newElement.tagName === 'IMG') {
                    makeImageEditable(newElement);
                } else if (newElement.tagName === 'UL' || newElement.tagName === 'OL') {
                    makeListEditable(newElement);
                } else {
                    makeElementEditable(newElement);
                }
                
                // Icons im neuen Element editierbar machen
                const icons = newElement.querySelectorAll('.icon, .contact-icon, .cta-icon, .phase-icon, .kerberos-feature-icon, .kerberos-highlight-icon, .kerberos-button-icon, .kerberos-card-button-icon, .kerberos-api-symbol, .kerberos-device-symbol, [class*="icon"], [class*="fa-"], span[style*="font-family"][style*="Font Awesome"], span[innerHTML*="&#x"]');
                icons.forEach(icon => {
                    if (!icon.querySelector('.element-controls')) {
                        icon.classList.add('icon-editable');
                        icon.onclick = (e) => {
                            e.stopPropagation();
                            editIcon(icon);
                        };
                        
                        // Visual Feedback f√ºr Icons
                        icon.style.position = 'relative';
                        icon.style.cursor = 'pointer';
                        icon.style.transition = 'all 0.3s ease';
                        
                        icon.addEventListener('mouseenter', () => {
                            if (!icon.classList.contains('editing')) {
                                icon.style.transform = 'scale(1.1)';
                                icon.style.filter = 'brightness(1.2)';
                            }
                        });
                        
                        icon.addEventListener('mouseleave', () => {
                            if (!icon.classList.contains('editing')) {
                                icon.style.transform = 'scale(1)';
                                icon.style.filter = 'brightness(1)';
                            }
                        });
                    }
                });
                
                // Bilder im neuen Element editierbar machen
                const images = newElement.querySelectorAll('img');
                images.forEach(image => {
                    if (!image.classList.contains('element-editable')) {
                        makeImageEditable(image);
                    }
                });
                
                // Listen im neuen Element editierbar machen
                const lists = newElement.querySelectorAll('ul, ol');
                lists.forEach(list => {
                    if (!list.classList.contains('element-editable')) {
                        makeListEditable(list);
                    }
                });
                
                updateCodeFromVisual();
            }, 10);
            
            showNotification('‚úÖ Element wurde dupliziert!', 'success');
        }

        function deleteElement(element) {
            const elementType = getElementType(element);
            const confirmation = confirm('M√∂chten Sie dieses Element wirklich l√∂schen?\n\nElement: ${elementType}');
            
            if (confirmation) {
                // Spezielle Behandlung f√ºr Bilder in Containern
                if (element.classList.contains('image-editable') && element.parentElement.classList.contains('image-container')) {
                    element.parentElement.remove();
                } else {
                    element.remove();
                }
                updateCodeFromVisual();
                showNotification('‚úÖ Element wurde gel√∂scht!', 'success');
            }
        }

        function saveElementEdit() {
            if (!currentEditingElement) return;
            
            // Rich Text Editor speichern
            const richTextEditor = document.getElementById('richTextEditor');
            if (richTextEditor) {
                const controls = currentEditingElement.querySelector('.element-controls');
                currentEditingElement.innerHTML = richTextEditor.innerHTML;
                if (controls) {
                    currentEditingElement.appendChild(controls);
                }
                updateCodeFromVisual();
                closeTextEditor();
                showNotification('‚úÖ Rich Text wurde aktualisiert!', 'success');
                return;
            }
            
            // Icon speichern (erweitert)
            const customIcon = document.getElementById('customIcon');
            if (customIcon) {
                const selectedColor = document.querySelector('.color-option.selected')?.dataset.color || 
                                    document.getElementById('customColor')?.value || '#063AA8';
                const iconSize = document.getElementById('iconSize')?.value || '1em';
                
                currentEditingElement.innerHTML = customIcon.value;
                currentEditingElement.style.color = selectedColor;
                currentEditingElement.style.fontSize = iconSize;
                
                updateCodeFromVisual();
                closeTextEditor();
                showNotification('‚úÖ Icon wurde aktualisiert!', 'success');
                return;
            }

            // Bild speichern (erweitert mit Verlinkung)
            const imageUrl = document.getElementById('imageUrl');
            if (imageUrl) {
                const imageAlt = document.getElementById('imageAlt').value;
                const imageWidth = document.getElementById('imageWidth').value;
                const imageHeight = document.getElementById('imageHeight').value;
                const imageObjectFit = document.getElementById('imageObjectFit')?.value || 'cover';
                const imageResponsive = document.getElementById('imageResponsive').checked;
                const imageLink = document.getElementById('imageLink')?.value;
                const imageLinkNewTab = document.getElementById('imageLinkNewTab')?.checked;
                
                // Bild-Eigenschaften setzen
                currentEditingElement.src = imageUrl.value;
                currentEditingElement.alt = imageAlt;
                
                if (imageWidth) currentEditingElement.style.width = imageWidth;
                if (imageHeight) currentEditingElement.style.height = imageHeight;
                currentEditingElement.style.objectFit = imageObjectFit;
                
                if (imageResponsive) {
                    currentEditingElement.style.maxWidth = '100%';
                    currentEditingElement.style.height = 'auto';
                }
                
                // Link-Funktionalit√§t
                const parentLink = currentEditingElement.closest('a');
                
                if (imageLink && imageLink.trim()) {
                    // Link hinzuf√ºgen oder aktualisieren
                    if (parentLink) {
                        parentLink.href = imageLink;
                        parentLink.target = imageLinkNewTab ? '_blank' : '';
                    } else {
                        // Neuen Link um das Bild erstellen
                        const link = document.createElement('a');
                        link.href = imageLink;
                        if (imageLinkNewTab) link.target = '_blank';
                        
                        const parent = currentEditingElement.parentNode;
                        parent.insertBefore(link, currentEditingElement);
                        link.appendChild(currentEditingElement);
                    }
                } else if (parentLink) {
                    // Bestehenden Link entfernen
                    const parent = parentLink.parentNode;
                    parent.insertBefore(currentEditingElement, parentLink);
                    parent.removeChild(parentLink);
                }
                
                updateCodeFromVisual();
                closeTextEditor();
                showNotification('‚úÖ Bild wurde aktualisiert!', 'success');
                return;
            }

            // Listen-Stil speichern
            const customListStyle = document.getElementById('customListStyle');
            if (customListStyle) {
                currentEditingElement.style.listStyleType = customListStyle.value;
                updateCodeFromVisual();
                closeTextEditor();
                showNotification('‚úÖ Listen-Stil wurde aktualisiert!', 'success');
                return;
            }

            // Link/Button speichern
            const linkText = document.getElementById('linkText');
            const linkHref = document.getElementById('linkHref');
            if (linkText && linkHref) {
                const linkNewTab = document.getElementById('linkNewTab').checked;
                
                // Text aktualisieren, aber Icons beibehalten
                const iconElements = currentEditingElement.querySelectorAll('.icon, .contact-icon, .cta-icon, .kerberos-button-icon, .kerberos-feature-icon, .kerberos-highlight-icon, .kerberos-card-button-icon');
                const controlElements = currentEditingElement.querySelectorAll('.element-controls');
                
                currentEditingElement.innerHTML = '';
                iconElements.forEach(icon => currentEditingElement.appendChild(icon));
                currentEditingElement.appendChild(document.createTextNode(linkText.value));
                controlElements.forEach(control => currentEditingElement.appendChild(control));
                
                currentEditingElement.href = linkHref.value;
                if (linkNewTab) {
                    currentEditingElement.target = '_blank';
                } else {
                    currentEditingElement.removeAttribute('target');
                }
                
                updateCodeFromVisual();
                closeTextEditor();
                showNotification('‚úÖ Link wurde aktualisiert!', 'success');
                return;
            }

            // Text speichern (einfach)
            const textInput = document.getElementById('textInput');
            const htmlInput = document.getElementById('htmlInput');
            
            if (textInput) {
                const controls = currentEditingElement.querySelector('.element-controls');
                
                // HTML-Tags im Text beibehalten
                const newContent = textInput.value;
                currentEditingElement.innerHTML = newContent;
                
                if (controls) {
                    currentEditingElement.appendChild(controls);
                }
            } else if (htmlInput) {
                const controls = currentEditingElement.querySelector('.element-controls');
                currentEditingElement.innerHTML = htmlInput.value;
                if (controls) {
                    currentEditingElement.appendChild(controls);
                }
            }
            
            updateCodeFromVisual();
            closeTextEditor();
            showNotification('‚úÖ Element wurde aktualisiert!', 'success');
        }

        function closeTextEditor() {
            document.getElementById('textEditorPopup').style.display = 'none';
            currentEditingElement = null;
        }

        function updateCodeFromVisual() {
            const visualEditor = document.getElementById('visualEditor');
            const codeEditor = document.getElementById('moduleCode');
            
            const clonedEditor = visualEditor.cloneNode(true);
            
            // Alle editierbar-spezifischen Klassen und Attribute entfernen
            const editableElements = clonedEditor.querySelectorAll('[contenteditable], .element-editable, .icon-editable, .image-editable');
            editableElements.forEach(el => {
                el.removeAttribute('contenteditable');
                el.classList.remove('element-editable', 'selected', 'icon-editable', 'image-editable');
                el.removeAttribute('data-element-id');
                el.removeAttribute('onclick');
            });
            
            // Alle Kontrollelemente entfernen
            const controlElements = clonedEditor.querySelectorAll('.element-controls');
            controlElements.forEach(el => el.remove());
            
            // Image container bereinigen
            const imageContainers = clonedEditor.querySelectorAll('.image-container');
            imageContainers.forEach(container => {
                const img = container.querySelector('img');
                if (img) {
                    container.parentNode.insertBefore(img, container);
                    container.remove();
                }
            });

            const cleanedCode = cleanCodeFromEditorArtifacts(clonedEditor.innerHTML);
            codeEditor.value = cleanedCode;
            updatePreview();
        }

        // Code von Editor-Artefakten s√§ubern
        function cleanCodeFromEditorArtifacts(code) {
            return code
                // Spezifische Editor-Box-Shadows entfernen
                .replace(/style="[^"]*box-shadow:\s*rgba\s*\(\s*0\s*,\s*156\s*,\s*230[^)]*\)[^"]*"/gi, (match) => {
                    return match
                        .replace(/box-shadow:\s*rgba\s*\(\s*0\s*,\s*156\s*,\s*230[^)]*\)[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*rgba\s*\(\s*6\s*,\s*58\s*,\s*168[^)]*\)[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+2px[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+3px[^;]*;?/gi, '')
                        .replace(/;\s*;+/g, ';')
                        .replace(/style="\s*;*\s*"/g, '')
                        .replace(/style=""/g, '');
                })
                // Leere Style-Attribute entfernen
                .replace(/\s+style="[^"]*"/g, (match) => {
                    const cleaned = match
                        .replace(/box-shadow:\s*rgba\s*\(\s*0\s*,\s*156\s*,\s*230[^)]*\)[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*rgba\s*\(\s*6\s*,\s*58\s*,\s*168[^)]*\)[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+2px[^;]*;?/gi, '')
                        .replace(/box-shadow:\s*[^;]*0px\s+0px\s+0px\s+3px[^;]*;?/gi, '')
                        .replace(/outline:\s*[^;]*;?/gi, '')
                        .replace(/border:\s*[^;]*dashed[^;]*;?/gi, '')
                        .replace(/transition:\s*all\s+0\.3s\s+ease[^;]*;?/gi, '')
                        .replace(/cursor:\s*pointer[^;]*;?/gi, '')
                        .replace(/position:\s*relative[^;]*;?/gi, '')
                        .replace(/transform:\s*scale\([^)]*\)[^;]*;?/gi, '')
                        .replace(/filter:\s*brightness\([^)]*\)[^;]*;?/gi, '')
                        .replace(/;\s*;+/g, ';')
                        .replace(/^\s*;|;\s*$/g, '');
                    
                    if (cleaned.match(/style="\s*"/)) {
                        return '';
                    }
                    return cleaned;
                })
                // Komplett leere Style-Attribute entfernen
                .replace(/\s+style=""/g, '')
                .replace(/\s+style="\s*"/g, '');
        }

        // Modul-Management
        function saveModule() {
            if (!currentModule) return;

            currentModule.name = document.getElementById('moduleName').value;
            currentModule.description = document.getElementById('moduleDescription').value;
            currentModule.category = document.getElementById('moduleCategory').value;
            currentModule.tags = document.getElementById('moduleTags').value.split(',').map(tag => tag.trim()).filter(tag => tag);
            currentModule.code = document.getElementById('moduleCode').value;
            currentModule.modified = new Date().toISOString();

            renderModuleList();
            saveToLocalStorage();
            showNotification('‚úÖ Modul erfolgreich gespeichert!', 'success');
        }

        function deleteModule(moduleId) {
            moduleToDelete = moduleId;
            document.getElementById('deleteModuleName').textContent = modules[moduleId].name;
            document.getElementById('deleteModal').style.display = 'block';
        }

        function confirmDelete() {
            if (!moduleToDelete) return;

            if (currentModule && currentModule.id === moduleToDelete) {
                document.getElementById('moduleEditor').style.display = 'none';
                document.getElementById('welcomeScreen').style.display = 'block';
                currentModule = null;
            }

            delete modules[moduleToDelete];
            renderModuleList();
            saveToLocalStorage();
            document.getElementById('deleteModal').style.display = 'none';
            moduleToDelete = null;
            showNotification('üóëÔ∏è Modul wurde gel√∂scht!', 'success');
        }

        function duplicateModule() {
            if (!currentModule) return;

            moduleCounter++;
            const newId = 'module-' + Date.now();
            const duplicatedModule = {
                ...currentModule,
                id: newId,
                name: currentModule.name + ' (Kopie)',
                created: new Date().toISOString(),
                modified: new Date().toISOString()
            };

            modules[newId] = duplicatedModule;
            renderModuleList();
            loadModule(newId);
            saveToLocalStorage();
            showNotification('üìã Modul dupliziert', 'success');
        }

        function exportModule() {
            if (!currentModule) return;

            const dataStr = JSON.stringify(currentModule, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = currentModule.name.toLowerCase().replace(/[^a-z0-9]/g, '-') + '.json';
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
            
            showNotification('üì§ Modul exportiert', 'success');
        }

        function exportAllModules() {
            const exportData = {
                modules: modules,
                exportDate: new Date().toISOString(),
                version: '2.0'
            };

            const dataStr = JSON.stringify(exportData, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', 'kerberos-modules-backup.json');
            linkElement.click();
            
            showNotification('üì¶ Vollexport heruntergeladen', 'success');
        }

        function quickBackup() {
            const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
            const backupData = {
                modules: modules,
                created: timestamp,
                version: '2.0'
            };
            
            const dataStr = JSON.stringify(backupData, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', 'kerberos-modules-backup-${timestamp.slice(0,10)}.json');
            linkElement.click();
            
            showNotification('üíæ Schnell-Backup heruntergeladen', 'success');
        }

        function handleFileImport(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const importData = JSON.parse(e.target.result);
                    
                    if (importData.modules) {
                        Object.assign(modules, importData.modules);
                    } else if (importData.id) {
                        modules[importData.id] = importData;
                    }
                    
                    renderModuleList();
                    saveToLocalStorage();
                    document.getElementById('importModal').style.display = 'none';
                    showNotification('‚úÖ Module erfolgreich importiert!', 'success');
                } catch (error) {
                    showNotification('‚ùå Fehler beim Importieren: ' + error.message, 'error');
                }
            };
            reader.readAsText(file);
        }

        function importFromText() {
            const text = document.getElementById('importText').value;
            if (!text.trim()) return;
            
            try {
                const importData = JSON.parse(text);
                
                if (importData.modules) {
                    modules = { ...modules, ...importData.modules };
                } else if (importData.id) {
                    modules[importData.id] = importData;
                }
                
                renderModuleList();
                saveToLocalStorage();
                document.getElementById('importModal').style.display = 'none';
                showNotification('‚úÖ Module aus Text importiert', 'success');
            } catch (error) {
                showNotification('‚ùå Ung√ºltiger JSON-Text', 'error');
            }
        }

